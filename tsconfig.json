{
  "compilerOptions": {
    "rootDir": ".",
    "target": "esnext",
    "module": "esnext",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "./public/build",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": "resources",
    "paths": {
      "@/*": ["js/*"],
      "@trekker/*": ["camino-trekker/*"],
      "@creator/*": ["camino-creator/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["resources"],
  "exclude": ["vendor", "node_modules", "./public/build", "*.stories.*"]
}
