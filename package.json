{
  "name": "camino",
  "description": "",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/UMN-LATIS/Camino.git"
  },
  "scripts": {
    "dev": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "production": "mix --production",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "cert": "rm -rf .cert && mkdir -p .cert && mkcert -key-file ./.cert/key.pem -cert-file ./.cert/cert.pem 'localhost' 127.0.0.1 `ipconfig getifaddr en0`",
    "lint": "eslint './**/*.{js,mjs,cjs,vue}'",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "pretty-quick": "pretty-quick",
    "pretty-quick:staged": "pretty-quick --staged",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@vue/compiler-sfc": "^3.2.31",
    "cross-env": "^7.0.3",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-vue": "^8.6.0",
    "husky": "^7.0.4",
    "laravel-mix": "^6.0",
    "lint-staged": "^12.3.7",
    "prettier": "2.6.2",
    "pretty-quick": "^3.1.3",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.50.0",
    "sass-loader": "^12.6.0",
    "sass-resources-loader": "^2.2.4",
    "vue-loader": "^17.0.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.5",
    "axios": "^0.26",
    "bootstrap": "^5.1.3",
    "dompurify": "^2.3.6",
    "leaflet": "^1.7.1",
    "leaflet-draw": "^1.0.4",
    "leaflet-polylinedecorator": "git+https://github.com/UMN-LATIS/Leaflet.PolylineDecorator.git",
    "leaflet.locatecontrol": "^0.76.0",
    "marked": "^4.0.12",
    "pinia": "^2.0.13",
    "qrcode.vue": "^3.3.3",
    "three": "^0.139.2",
    "vue": "^3.2.31",
    "vue-cool-lightbox": "^2.7.4",
    "vue-i18n": "^9.1.9",
    "vue-progressbar": "^0.7.5",
    "vue-qrcode-component": "^2.1.1",
    "vue-router": "^4.0.14",
    "vuedraggable": "^4.1.0",
    "webpack": "^5.72.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{js,vue}": [
      "eslint --fix",
      "git add"
    ]
  }
