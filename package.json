{
  "name": "camino",
  "description": "",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/UMN-LATIS/Camino.git"
  },
  "scripts": {
    "dev": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "cert": "rm -rf .cert && mkdir -p .cert && mkcert -key-file ./.cert/key.pem -cert-file ./.cert/cert.pem 'localhost' 127.0.0.1 `ipconfig getifaddr en0`",
    "lint": "eslint './**/*.{js,mjs,cjs,vue,ts}'",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "pretty-quick": "pretty-quick",
    "pretty-quick:staged": "pretty-quick --staged",
    "prepare": "husky install",
    "cypress": "cypress open --env failOnSnapshotDiff=false",
    "cypress:headless": "cypress run --browser chrome",
    "jest": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "npm run jest -- --watch",
    "test": "npm run jest & npm run cypress:headless"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.3",
    "@types/leaflet": "^1.7.10",
    "@types/webpack-env": "^1.17.0",
    "@vue/compiler-sfc": "^3.2.36",
    "@vue/eslint-config-typescript": "https://github.com/vuejs/eslint-config-typescript.git",
    "cross-env": "^7.0.3",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.1.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "laravel-mix": "^6.0",
    "lint-staged": "^13.0.2",
    "prettier": "2.6.2",
    "pretty-quick": "^3.1.3",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.52.2",
    "sass-loader": "^13.0.0",
    "sass-resources-loader": "^2.2.5",
    "ts-loader": "^9.3.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.7.3",
    "vue-loader": "^17.0.0"
  },
  "dependencies": {
    "@ar-js-org/ar.js": "^3.4.0",
    "@fontsource/material-icons": "^4.5.4",
    "@fontsource/poppins": "^4.5.8",
    "@popperjs/core": "^2.11.5",
    "@types/jest": "^28.1.1",
    "@vueuse/core": "^8.6.0",
    "aframe": "^1.3.0",
    "aframe-look-at-component": "^1.0.0",
    "axios": "^0.27.2",
    "bootstrap": "^5.1.3",
    "cypress": "9.7.0",
    "dompurify": "^2.3.8",
    "leaflet": "^1.8.0",
    "leaflet-draw": "^1.0.4",
    "leaflet-polylinedecorator": "git+https://github.com/UMN-LATIS/Leaflet.PolylineDecorator.git",
    "leaflet.locatecontrol": "^0.76.1",
    "mapbox-gl": "^2.8.2",
    "marked": "^4.0.16",
    "md5": "^2.3.0",
    "normalize.css": "^8.0.1",
    "pinia": "^2.0.14",
    "qrcode.vue": "^3.3.3",
    "ramda": "^0.28.0",
    "three": "^0.141.0",
    "vue": "^3.2.37",
    "vue-cool-lightbox": "^2.7.4",
    "vue-easy-lightbox": "^1.4.1",
    "vue-i18n": "^9.1.10",
    "vue-progressbar": "^0.7.5",
    "vue-qrcode-component": "^2.1.1",
    "vue-router": "^4.0.15",
    "vue-types": "^4.1.1",
    "vuedraggable": "^4.1.0",
    "webpack": "^5.73.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{js,vue}": [
      "eslint --fix",
      "git add"
    ]
  }
}
